<UserControl x:Class="TrinityCreator.UI.UIElements.DynamicDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TrinityCreator"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <DockPanel Name="HeaderDp" />
        <StackPanel x:Name="DynamicSp" />
        <DockPanel>
            <Button Name="AddLineBtn" Margin="5" HorizontalAlignment="Left" Click="addLineBtn_Click">
                <StackPanel Orientation="Horizontal" Height="30">
                    <Image Source="/TrinityCreator;component/Resources/add-icon.png" Margin="10,0" Width="24" Height="24" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <TextBlock Text="Add" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,15,0" />
                </StackPanel>
            </Button>
        </DockPanel>
    </StackPanel>
</UserControl>