<Window x:Class="TrinityCreator.Tools.CreatureCreator.CreatureTemplateWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TrinityCreator"
      mc:Ignorable="d" 
      ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner"
      Width="300" Height="400" Title="Select creature template">

    <DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <Button DockPanel.Dock="Bottom" Content="Cancel" Click="cancelBtn_Click" IsDefault="True" Margin="2"/>
            <Button DockPanel.Dock="Bottom" Content="Load selected template" Click="loadTemplateBtn_Click" IsDefault="True" Margin="2" FontWeight="Bold"/>
            
            <ListBox Name="templateListBox" DockPanel.Dock="Top" Margin="2"/>
        </DockPanel>
    </DockPanel>
</Window>
